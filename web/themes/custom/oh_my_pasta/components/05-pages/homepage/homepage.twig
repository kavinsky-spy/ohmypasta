{{ attach_library('oh_my_pasta/homepage') }}

{% embed "@organisms/header/header.twig" with {
    hero_background_type: true
} %}

	{% block header_desktop_account_block %}
		{% include "@atoms/button/button.twig" with {
              button_content: header_account_text|default('Login'|t),
              button_url: header_account_url|default('#'),
            } %}
		{% include "@atoms/button/button.twig" with {
              button_content: header_account_text|default('Sign Up'|t),
              button_url: header_account_url|default('#'),
              button_type: 'outline',
              button_modifiers: ['outline-red'],
            } %}
	{% endblock %}

	{% block header_search_block %}{% endblock %}

{% endembed %}

<section class="hero">
	<div class="hero-content">
		<h1>{{ 'Food delivery and more' }}</h1>
		<p>{{ 'Fast delivery from your favorite local restaurants' }}</p>
		<form>
			<input type="text" placeholder="Enter your address">
			<button type="submit">Find Food</button>
		</form>
	</div>
</section>
<section class="featured-items">
	<h2>Featured Restaurants</h2>
	<div class="cards">
		{% for restaurant in restaurants %}
			<div class="card">
				<img src="{{ restaurant.image }}" alt="{{ restaurant.name }}">
				<h3>{{ restaurant.name }}</h3>
				<p>{{ restaurant.description }}</p>
			</div>
		{% endfor %}
	</div>
</section>
<footer class="footer">
	<div class="footer-nav">
		<ul>
			<li><a href="#">About Us</a></li>
			<li><a href="#">Contact</a></li>
			<li><a href="#">Privacy Policy</a></li>
		</ul>
	</div>
</footer>
