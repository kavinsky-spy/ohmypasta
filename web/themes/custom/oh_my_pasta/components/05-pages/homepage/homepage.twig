{{ attach_library('oh_my_pasta/homepage') }}

{% embed "@organisms/header/header.twig" with {
    hero_background_type: true
} %}
	{% block header_desktop_account_block %}
		{% include "@atoms/button/button.twig" with {
              button_content: header_account_text|default('Login'|t),
              button_url: header_account_url|default('#'),
            } %}
		{% include "@atoms/button/button.twig" with {
              button_content: header_account_text|default('Sign Up'|t),
              button_url: header_account_url|default('#'),
              button_type: 'outline',
              button_modifiers: ['outline-red'],
            } %}
	{% endblock %}

	{% block header_search_block %}{% endblock %}

{% endembed %}

{% embed "@molecules/hero/hero.twig" with {
	hero_heading: "Check new flavours",
	hero_background_type: true,
} %}
	
{% endembed %}

{% embed "@organisms/cta-sections/cta-sections.twig" %}
	{% block sections_items_block %}
		{% include "@molecules/section-cta/cta-section.twig" with {
            section_title: 'Become a Dasher',
            section_image: 'https://loremicon.com/rect/154/154/',
            section_text: 'As a delivery driver, make money and work on your schedule. Sign up in minutes.',
            section_cta_text: 'Start earning',
		} %}
		{% include "@molecules/section-cta/cta-section.twig" with {
            section_title: 'Become a Dasher',
            section_image: 'https://loremicon.com/rect/154/154/',
            section_text: 'As a delivery driver, make money and work on your schedule. Sign up in minutes.',
            section_cta_text: 'Start earning',
        } %}
		{% include "@molecules/section-cta/cta-section.twig" with {
            section_title: 'Become a Dasher',
            section_image: 'https://loremicon.com/rect/154/154/',
            section_text: 'As a delivery driver, make money and work on your schedule. Sign up in minutes.',
            section_cta_text: 'Start earning',
        } %}
	{% endblock %}
{% endembed %}

<section class="featured-items">
	<h2>Featured Restaurants</h2>
	<div class="cards">
		{% for restaurant in restaurants %}
			<div class="card">
				<img src="{{ restaurant.image }}" alt="{{ restaurant.name }}">
				<h3>{{ restaurant.name }}</h3>
				<p>{{ restaurant.description }}</p>
			</div>
		{% endfor %}
	</div>
</section>
<footer class="footer">
	<div class="footer-nav">
		<ul>
			<li><a href="#">About Us</a></li>
			<li><a href="#">Contact</a></li>
			<li><a href="#">Privacy Policy</a></li>
		</ul>
	</div>
</footer>
