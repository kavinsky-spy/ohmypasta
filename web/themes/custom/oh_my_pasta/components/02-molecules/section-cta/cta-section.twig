{% set cta_section_base_class = cta_section_base_class|default('cta-section') %}
{% set cta_section_modifier_class = cta_section_modifier_class|default('') %}

<div {{ bem(cta_section_base_class, cta_section_modifier_class, cta_section_blockname, cta_section_extra_classes)}}>

	<div {{ bem('image', cta_section_modifier_class, cta_section_base_class, cta_section_extra_classes)}}>
		<img src="{{ section_image }}"/>
	</div>

	<div {{ bem('content', cta_section_modifier_class, cta_section_base_class, cta_section_extra_classes)}}>
		<div {{ bem('text', cta_section_modifier_class, cta_section_base_class, cta_section_extra_classes)}}>
			{% include "@atoms/heading/heading.twig" with {
                heading: section_title,
                heading_level: 2,
            } %}
			{% include "@atoms/heading/heading.twig" with {
                heading: section_text,
                heading_level: 3,
            } %}
		</div>

		{% include "@atoms/button/button.twig" with {
            button_content: section_cta_text|default('Sign Up'|t),
            button_url: section_cta_url|default('#'),
        } %}

	</div>
</div>
