{#
/**
 * Available variables:
 * - desktop_size: sets size of the image for desktop
 * - tablet_size: sets size of the image for tablet
 * - mobile_size: sets size of the image for mobile
 */
#}

<picture>
  <source srcset="https://picsum.photos/{{ desktop_size }}/" media="(min-width: 998px)">
  <source srcset="https://picsum.photos/{{ tablet_size }}/" media="(min-width: 600px)">
  <source srcset="https://picsum.photos/{{ mobile_size }}/" media="(max-width: 600px)">
  <img alt="Alt text">
</picture>
